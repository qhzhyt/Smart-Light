<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

      <EditTextPreference
            android:key="server_host"
            android:title="Server Host"
            android:defaultValue="192.168.43.1"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1"/>

      <EditTextPreference
              android:key="site_path"
              android:title="Site Path"
              android:defaultValue="myLightServer"
              android:selectAllOnFocus="true"
              android:inputType="textCapWords"
              android:capitalize="words"
              android:singleLine="true"
              android:maxLines="1"/>

</PreferenceScreen>
